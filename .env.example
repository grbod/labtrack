# Application settings
APP_NAME=COA_Management_System
APP_ENV=development
DEBUG=True

# Database configuration
DATABASE_URL=sqlite:///./coa_management.db
# For PostgreSQL: postgresql://user:password@localhost:5432/coa_db
# For MySQL: mysql+pymysql://user:password@localhost:3306/coa_db

# AI API Keys (uncomment and fill the one you use)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here  # For Gemini via PydanticAI

# File paths
TEMPLATES_PATH=./templates
UPLOAD_PATH=./uploads
EXPORT_PATH=./exports

# Monitoring settings
WATCH_FOLDER_PATH=./watch_folder
WATCH_INTERVAL=10  # seconds

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@coasystem.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/coa_system.log

# External services
SHAREPOINT_URL=
SHAREPOINT_CLIENT_ID=
SHAREPOINT_CLIENT_SECRET=

# Feature flags
ENABLE_AI_PARSING=True
ENABLE_FOLDER_MONITORING=True
ENABLE_EMAIL_NOTIFICATIONS=False